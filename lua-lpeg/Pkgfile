# Description: 
# URL:         http://www.inf.puc-rio.br/~roberto/lpeg
# Maintainer:  
# Depends on:  lua51 lua52 lua

name=lua-lpeg
version=1.0.2
release=2
source=(http://www.inf.puc-rio.br/~roberto/${name:4:7}/${name:4:7}-$version.tar.gz)

build() {
	cd ${name:4:7}-$version

	make
	install -Dst $PKG/usr/lib lpeg.so
	install -Dst $PKG/usr/lib/lua/5.4 lpeg.so
	install -Dst $PKG/usr/lib/lua/5.2 lpeg.so
	install -Dst $PKG/usr/lib/lua/5.1 lpeg.so
}
